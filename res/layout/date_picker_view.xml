<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView 
        android:id="@+id/dpa_tv_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="5sp"
        android:text="@string/dpa_tv_text"
        android:layout_alignParentTop="true"
        android:gravity="center"
        />
    
    <Button 
        android:id="@+id/dpa_btn_action"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dpa_tv_message"
        android:layout_marginTop="0sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:text="@string/dpa_btn_action"
        />
    
    <TextView 
        android:id="@+id/dpa_tv_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="5sp"
        android:gravity="center"
        android:layout_below="@id/dpa_btn_action"
        />
    
</RelativeLayout>
